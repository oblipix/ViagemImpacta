@model IEnumerable<ViagemImpacta.Models.User>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Usuários";
    int pageSize = 10;
    int skip = 0;
    string search = "";
    var request = HttpContextAccessor?.HttpContext?.Request;
    if (request != null)
    {
        if (!string.IsNullOrEmpty(request.Query["take"]))
            int.TryParse(request.Query["take"], out pageSize);
        if (!string.IsNullOrEmpty(request.Query["skip"]))
            int.TryParse(request.Query["skip"], out skip);
        search = request.Query["search"].ToString() ?? "";
    }
    int page = (skip / pageSize) + 1;
}

<h1>Usuários</h1>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Buscar por nome, email ou CPF" value="@search" />
        <button class="btn btn-primary" type="submit">Buscar</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>CPF</th>
            <th>Idade</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Cpf</td>
                   @* <td>@user.BirthDate</td> *@
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@user.UserId">Detalhar</a>
                        <a class="btn btn-sm btn-secondary" asp-action="Reviews" asp-route-id="@user.UserId">Avaliações</a>
                        <a class="btn btn-sm btn-warning" asp-action="Reservations" asp-route-id="@user.UserId">Reservas</a>
                        <a class="btn btn-sm btn-success" asp-action="Packages" asp-route-id="@user.UserId">Pacotes</a>
                        <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger">Deletar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6">Nenhum usuário encontrado.</td></tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        <li class="page-item @(page == 1 ? "disabled" : "")">
            <a class="page-link" href="?skip=@(skip - pageSize)&take=@pageSize&search=@search">Anterior</a>
        </li>
        <li class="page-item">
            <span class="page-link">Página @(page.ToString())</span>
        </li>
        <li class="page-item @(Model == null || Model.Count() < pageSize ? "disabled" : "")">
            <a class="page-link" href="?skip=@(skip + pageSize)&take=@pageSize&search=@search">Próxima</a>
        </li>
    </ul>
</nav>
