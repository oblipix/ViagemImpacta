@model ViagemImpacta.Models.Hotel

@{
    ViewData["Title"] = "Detalhes do Hotel";
}

<h1>Detalhes do Hotel</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.HotelAddress)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.HotelAddress)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.City)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.City)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Phone)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Stars)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Stars) ⭐</dd>
    </dl>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h4>Comodidades Básicas</h4>
        <ul class="list-unstyled">
            @if (Model.Wifi)
            {
                <li><i class="fas fa-wifi text-success"></i> WiFi Gratuito</li>
            }
            @if (Model.Parking)
            {
                <li><i class="fas fa-parking text-success"></i> Estacionamento</li>
            }
            @if (Model.Accessibility)
            {
                <li><i class="fas fa-wheelchair text-success"></i> Acessibilidade</li>
            }
            @if (Model.PetFriendly)
            {
                <li><i class="fas fa-paw text-success"></i> Pet Friendly</li>
            }
            @if (Model.BreakfastIncludes)
            {
                <li><i class="fas fa-coffee text-success"></i> Café da Manhã Incluso</li>
            }
        </ul>
    </div>
    
    <div class="col-md-6">
        <h4>Serviços e Entretenimento</h4>
        <ul class="list-unstyled">
            @if (Model.RoomService)
            {
                <li><i class="fas fa-concierge-bell text-success"></i> Room Service</li>
            }
            @if (Model.Restaurant)
            {
                <li><i class="fas fa-utensils text-success"></i> Restaurante</li>
            }
            @if (Model.Bar)
            {
                <li><i class="fas fa-cocktail text-success"></i> Bar</li>
            }
            @if (Model.Gym)
            {
                <li><i class="fas fa-dumbbell text-success"></i> Academia</li>
            }
            @if (Model.Theater)
            {
                <li><i class="fas fa-theater-masks text-success"></i> Teatro</li>
            }
        </ul>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-12">
        <h4>Área de Lazer</h4>
        <ul class="list-unstyled">
            @if (Model.Pool)
            {
                <li><i class="fas fa-swimming-pool text-primary"></i> Piscina</li>
            }
            @if (Model.WarmPool)
            {
                <li><i class="fas fa-hot-tub text-primary"></i> Piscina Aquecida</li>
            }
            @if (Model.Garden)
            {
                <li><i class="fas fa-leaf text-success"></i> Jardim</li>
            }
        </ul>
    </div>
</div>

<hr />
<h4>Quartos Cadastrados</h4>

@if (Model.Rooms != null && Model.Rooms.Any())
{
    <table class="table table-bordered table-striped mt-3">
        <thead class="table-light">
            <tr>
                <th>Tipo</th>
                <th>Quantidade</th>
                <th>Capacidade</th>
                <th>Preço da Diária</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model.Rooms)
            {
                <tr>
                    <td>@room.TypeName</td>
                    <td>@room.TotalRooms quartos</td>
                    <td>@room.Capacity pessoas</td>
                    <td>@room.AverageDailyPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
    
    <div class="mt-3">
        <p class="text-muted">
            <strong>Total de quartos:</strong> @Model.Rooms.Sum(r => r.TotalRooms) quartos disponíveis
        </p>
    </div>
}
else
{
    <div class="alert alert-info">Nenhum quarto cadastrado para este hotel.</div>
}

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.HotelId" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
</div>
