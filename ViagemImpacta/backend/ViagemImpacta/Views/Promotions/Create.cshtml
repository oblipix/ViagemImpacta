@model ViagemImpacta.DTO.Promotion.CreatePromotionDTO
@{
    ViewData["Title"] = "Criar Nova Promoção";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Criar Nova Promoção</h1>
    <a class="btn btn-secondary" asp-action="Index">Voltar à Lista</a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="TitlePromotion" class="form-label">Título da Promoção</label>
                        <input asp-for="TitlePromotion" class="form-control" placeholder="Ex: Pacote Final de Ano" />
                        <span asp-validation-for="TitlePromotion" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="HotelId" class="form-label">Hotel</label>
                        <select asp-for="HotelId" class="form-select" asp-items="ViewBag.Hotels">
                            <option value="">Selecione um hotel</option>
                        </select>
                        <span asp-validation-for="HotelId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Descrição</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Descreva os detalhes da promoção"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="StartDate" class="form-label">Data de Início da Promoção</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="EndDate" class="form-label">Data de Fim da Promoção</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CheckIn" class="form-label">Data de Check-In</label>
                        <input asp-for="CheckIn" type="date" class="form-control" />
                        <span asp-validation-for="CheckIn" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CheckOut" class="form-label">Data de Check-Out</label>
                        <input asp-for="CheckOut" type="date" class="form-control" />
                        <span asp-validation-for="CheckOut" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="RoomType" class="form-label">Tipo de Quarto</label>
                        <select asp-for="RoomType" class="form-select">
                            <option value="">Selecione o tipo</option>
                            <option value="Standard">Standard</option>
                            <option value="Suite">Suíte</option>
                            <option value="Luxo">Luxo</option>
                        </select>
                        <span asp-validation-for="RoomType" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="TotalRoomsAvailable" class="form-label">Quartos Disponíveis</label>
                        <input asp-for="TotalRoomsAvailable" type="number" class="form-control" min="1" placeholder="10" />
                        <span asp-validation-for="TotalRoomsAvailable" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="DiscountPercentage" class="form-label">Desconto (%)</label>
                        <input asp-for="DiscountPercentage" type="number" step="0.01" class="form-control" min="0" max="100" placeholder="15.00" />
                        <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div id="imageUrlsContainer">
                <div class="image-url-entry mb-3">
                    <label class="form-label">Imagem Principal *</label>
                    <div class="input-group">
                        <input type="url" name="BannerPromotion" class="form-control" placeholder="https://exemplo.com/imagem.jpg" />
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-2"></i>Criar Promoção
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-2"></i>Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
