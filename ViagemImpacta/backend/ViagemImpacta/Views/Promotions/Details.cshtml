@model ViagemImpacta.Models.Promotion
@{
    ViewData["Title"] = "Detalhes da Promoção";
}

<h1 class="mb-4">Detalhes da Promoção</h1>

<div class="card" style="max-width: 700px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Título</dt>
            <dd class="col-sm-8">@Model.TitlePromotion</dd>
            <dt class="col-sm-4">Descrição</dt>
            <dd class="col-sm-8">@Model.Description</dd>
            <dt class="col-sm-4">Data de Início</dt>
            <dd class="col-sm-8">@Model.StartDate.ToString("dd/MM/yyyy")</dd>
            <dt class="col-sm-4">Data de Fim</dt>
            <dd class="col-sm-8">@Model.EndDate.ToString("dd/MM/yyyy")</dd>
            <dt class="col-sm-4">Check-In</dt>
            <dd class="col-sm-8">@Model.CheckIn.ToString("dd/MM/yyyy")</dd>
            <dt class="col-sm-4">Check-Out</dt>
            <dd class="col-sm-8">@Model.CheckOut.ToString("dd/MM/yyyy")</dd>
            <dt class="col-sm-4">Hotel</dt>
            <dd class="col-sm-8">@Model.Hotel?.Name</dd>
            <dt class="col-sm-4">Preço Final</dt>
            <dd class="col-sm-8">@Model.FinalPrice.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</dd>
            <dt class="col-sm-4">Preço Original</dt>
            <dd class="col-sm-8">@Model.OriginalPrice.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</dd>
            <dt class="col-sm-4">Desconto (%)</dt>
            <dd class="col-sm-8">@Model.DiscountPercentage%</dd>
            <dt class="col-sm-4">Ativa</dt>
            <dd class="col-sm-8">@(Model.IsActive ? "Sim" : "Não")</dd>
            <dt class="col-sm-4">Criada em</dt>
            <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
            <dt class="col-sm-4">Quarto Promocional</dt>
            <dd class="col-sm-8">
                @if (Model.RoomsPromotional != null)
                {
                    <div class="d-flex flex-wrap gap-3 align-items-center border rounded p-2 bg-light">
                        <span><strong>Tipo:</strong> @Model.RoomsPromotional.TypeName</span>
                        <span><strong>Qtd. Disponível:</strong> @Model.RoomsPromotional.TotalRoomsAvailable</span>
                        <span><strong>Qtd. Reservada:</strong> @Model.RoomsPromotional.TotalRoomsReserved</span>
                        <span><strong>Capacidade:</strong> @Model.RoomsPromotional.Capacity pessoa(s)</span>
                        <span><strong>Ativo:</strong> @(Model.RoomsPromotional.active ? "Sim" : "Não")</span>
                    </div>
                }
                else
                {
                    <span class="text-muted">Nenhum quarto promocional cadastrado.</span>
                }
            </dd>
        </dl>
        <div class="d-flex gap-2 mt-3">
            <button onclick="history.back()" class="btn btn-secondary">Voltar</button>
            <a asp-action="Delete" asp-route-id="@Model.PromotionId" class="btn btn-danger">Deletar</a>
        </div>
    </div>
</div>
