@using ViagemImpacta.DTO.ReservationBookDTO
@model CreateUpdateReservationBookDto

@{
    ViewData["Title"] = "Criar Novo Pacote";
}

<h1>@ViewData["Title"]</h1>
<p>Preencha os dados abaixo para cadastrar um novo pacote de viagem.</p>
<hr />

<div class="row">
    <div class="col-md-7">
        <form asp-action="Create" method="post">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label fw-bold"></label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="row mb-3">
                <div class="col">
                    <label asp-for="Destination" class="control-label fw-bold"></label>
                    <input asp-for="Destination" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="FinalPrice" class="control-label fw-bold">Preço Final</label>
                    <input asp-for="FinalPrice" type="number" step="0.01" class="form-control" />
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label fw-bold">Descrição</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <label asp-for="CheckIn" class="control-label fw-bold">Check-in</label>
                    <input asp-for="CheckIn" type="date" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="CheckOut" class="control-label fw-bold">Check-out</label>
                    <input asp-for="CheckOut" type="date" class="form-control" />
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="control-label fw-bold">Hotéis Inclusos</label>
                <select asp-for="SelectedHotelIds" class="form-control" asp-items="ViewBag.Hotels" multiple="multiple" style="height: 150px;"></select>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Salvar Pacote" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}