@model IEnumerable<ViagemImpacta.DTOs.TravelPackageDto>

@{
    ViewData["Title"] = "Pacotes de Viagem";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-2"></i>Criar Novo Pacote
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Ainda não há pacotes cadastrados. <a asp-action="Create" class="alert-link">Clique aqui para criar o primeiro!</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Title)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Destination)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Price)</th>
                        <th>Hotéis Incluídos</th>
                        <th>Período</th>
                        <th class="text-center">Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Destination</td>
                            <td>@item.Price.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</td>
                            <td>
                                @if (item.Hotels != null && item.Hotels.Any())
                                {
                                    @string.Join(", ", item.Hotels.Select(h => h.Name))
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Nenhum</span>
                                }
                            </td>
                            <td>
                                @item.StartDate.ToString("dd/MM/yy") a @item.EndDate.ToString("dd/MM/yy")
                            </td>
                            <td class="text-center">
                                <span class="badge bg-success">Ativo</span>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.TravelPackageId" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.TravelPackageId" class="btn btn-sm btn-info">Detalhes</a>
                                <a asp-action="Delete" asp-route-id="@item.TravelPackageId" class="btn btn-sm btn-danger">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>