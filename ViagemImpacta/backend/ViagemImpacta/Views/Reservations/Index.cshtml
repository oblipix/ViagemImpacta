@model IEnumerable<ViagemImpacta.Models.Reservation>
@{
    ViewData["Title"] = "Reservas";
    var checkin = Context.Request.Query["checkin"].ToString();
    var checkout = Context.Request.Query["checkout"].ToString();
    var search = Context.Request.Query["search"].ToString();
    var status = Context.Request.Query["status"].ToString();

    int pageSize = 10;
    int skip = 0;
    if (!string.IsNullOrEmpty(Context.Request.Query["take"]))
        int.TryParse(Context.Request.Query["take"], out pageSize);
    if (!string.IsNullOrEmpty(Context.Request.Query["skip"]))
        int.TryParse(Context.Request.Query["skip"], out skip);
    int page = (skip / pageSize) + 1;
}

<!-- CSS do Litepicker -->
<link href="https://cdn.jsdelivr.net/npm/litepicker/dist/css/litepicker.css" rel="stylesheet" />
<!-- JS do Litepicker -->
<script src="https://cdn.jsdelivr.net/npm/litepicker/dist/litepicker.js"></script>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Lista de Reservas</h1>
    <a class="btn btn-secondary" asp-controller="Admins" asp-action="Dashboard">Voltar ao Dashboard</a>
</div>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-2 align-items-end">
        <form asp-action="Index" method="get" class="mb-4" onsubmit="return validateDates();">
            <div class="row g-2 align-items-end">
                <div class="col-md-4">
                    <label for="dateRange" class="form-label">Período da Reserva</label>
                    <input type="text" id="dateRange" class="form-control" readonly />
                    <input type="hidden" id="checkin" name="checkin" value="@checkin" />
                    <input type="hidden" id="checkout" name="checkout" value="@checkout" />
                </div>
                <div class="col-md-3">
                    <label for="search" class="form-label">Cliente ou Hotel</label>
                    <input type="text" class="form-control" id="search" name="search" placeholder="Nome do cliente ou hotel" value="@search" />
                </div>
                <div class="col-md-2">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="" selected="@(string.IsNullOrEmpty(status) ? "selected" : null)">Todos</option>
                        <option value="confirmadas" selected="@(status == "confirmadas" ? "selected" : null)">Apenas confirmadas</option>
                        <option value="nao-confirmadas" selected="@(status == "nao-confirmadas" ? "selected" : null)">Apenas não confirmadas</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary w-100">Filtrar</button>
                </div>
            </div>
            <input type="hidden" name="skip" value="@skip" />
            <input type="hidden" name="take" value="@pageSize" />

            @section Scripts {
                <script>
                    const picker = new Litepicker({
                        element: document.getElementById('dateRange'),
                        singleMode: false,
                        format: 'DD/MM/YYYY',
                        numberOfMonths: 2,
                        numberOfColumns: 2,
                        minDate: new Date(),
                        lang: 'pt-BR',
                        tooltipText: {
                            one: 'dia',
                            other: 'dias'
                        },
                        setup: (picker) => {
                            picker.on('selected', (start, end) => {
                                document.getElementById('checkin').value = start.format('YYYY-MM-DD');
                                document.getElementById('checkout').value = end.format('YYYY-MM-DD');
                            });
                        }
                    });

                    // Se já houver valores preenchidos do QueryString, mostrar no campo
                    const existingCheckin = '@checkin';
                    const existingCheckout = '@checkout';
                    if (existingCheckin && existingCheckout) {
                        picker.setDateRange(existingCheckin, existingCheckout);
                    }
                </script>
            }
        </form>
    </div>
    <input type="hidden" name="skip" value="@skip" />
    <input type="hidden" name="take" value="@pageSize" />
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Cliente</th>
            <th>Hotel</th>
            <th>Quarto</th>
            <th>Check-in</th>
            <th>Check-out</th>
            <th>Preço Total</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var reserva in Model.Skip(skip).Take(pageSize))
            {
                <tr>
                    <td>@reserva.ReservationId</td>
                    <td>@(reserva.User?.FirstName) @(reserva.User?.LastName)</td>
                    <td>@reserva.Hotel?.Name</td>
                    <td>@reserva.Room?.TypeName</td>
                    <td>@reserva.CheckIn.ToString("dd/MM/yyyy")</td>
                    <td>@reserva.CheckOut.ToString("dd/MM/yyyy")</td>
                    <td class="col text-center">@reserva.TotalPrice.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</td>
                    <td class="col text-center">
                        @if (reserva.IsConfirmed)
                        {
                            <span class="badge bg-success">Confirmado</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-black">Pendente</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@reserva.ReservationId">Detalhar</a>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@reserva.ReservationId">Editar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="9">Nenhuma reserva encontrada.</td></tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        <li class="page-item @(page == 1 ? "disabled" : "")">
            <a class="page-link" href="?skip=@(skip - pageSize)&take=@pageSize&checkin=@checkin&checkout=@checkout&search=@search&status=@status">Anterior</a>
        </li>
        <li class="page-item">
            <span class="page-link">Página @(page.ToString())</span>
        </li>
        <li class="page-item @(Model == null || Model.Skip(skip + pageSize).Any() == false ? "disabled" : "")">
            <a class="page-link" href="?skip=@(skip + pageSize)&take=@pageSize&checkin=@checkin&checkout=@checkout&search=@search&status=@status">Próxima</a>
        </li>
    </ul>
</nav>
