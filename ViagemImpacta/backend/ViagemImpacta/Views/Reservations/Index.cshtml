@model IEnumerable<ViagemImpacta.Models.Reservation>
@{
    ViewData["Title"] = "Reservas";
    var checkin = Context.Request.Query["checkin"].ToString();
    var checkout = Context.Request.Query["checkout"].ToString();
    var search = Context.Request.Query["search"].ToString();
    var status = Context.Request.Query["status"].ToString();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Lista de Reservas</h1>
    <a class="btn btn-secondary" asp-controller="Admins" asp-action="Dashboard">Voltar ao Dashboard</a>
</div>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-2 align-items-end">
        <div class="col-md-3">
            <label for="checkin" class="form-label">Check-in</label>
            <input type="date" class="form-control" id="checkin" name="checkin" value="@checkin" />
        </div>
        <div class="col-md-3">
            <label for="checkout" class="form-label">Check-out</label>
            <input type="date" class="form-control" id="checkout" name="checkout" value="@checkout" />
        </div>
        <div class="col-md-3">
            <label for="search" class="form-label">Usuário ou Hotel</label>
            <input type="text" class="form-control" id="search" name="search" placeholder="Nome do usuário ou hotel" value="@search" />
        </div>
        <div class="col-md-2">
            <label for="status" class="form-label">Status</label>
            <select class="form-select" id="status" name="status">
                <option value="" selected="@(string.IsNullOrEmpty(status) ? "selected" : null)">Todos</option>
                <option value="confirmadas" selected="@(status == "confirmadas" ? "selected" : null)">Apenas confirmadas</option>
                <option value="nao-confirmadas" selected="@(status == "nao-confirmadas" ? "selected" : null)">Apenas não confirmadas</option>
            </select>
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-primary w-100">Filtrar</button>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Usuário</th>
            <th>Hotel</th>
            <th>Quarto</th>
            <th>Check-in</th>
            <th>Check-out</th>
            <th>Preço Total</th>
            <th>Confirmada?</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var reserva in Model)
            {
                <tr>
                    <td>@reserva.ReservationId</td>
                    <td>@(reserva.User?.FirstName) @(reserva.User?.LastName)</td>
                    <td>@reserva.Hotel?.Name</td>
                    <td>@reserva.Room?.TypeName</td>
                    <td>@reserva.CheckIn.ToString("dd/MM/yyyy")</td>
                    <td>@reserva.CheckOut.ToString("dd/MM/yyyy")</td>
                    <td>@reserva.TotalPrice.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</td>
                    <td>
                        @if (reserva.IsConfirmed)
                        {
                            <span class="badge bg-success">Sim</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Não</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@reserva.ReservationId">Detalhar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="9">Nenhuma reserva encontrada.</td></tr>
        }
    </tbody>
</table>
