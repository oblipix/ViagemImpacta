@model ViagemImpacta.ViewModels.CreateEmpolyeeViewModel
@{
    ViewData["Title"] = "Criar Funcionário";
}

<h2 class="mb-4">Criar Funcionário</h2>
<div class="card" style="max-width: 600px;">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Senha</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">Primeiro Nome</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Sobrenome</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Roles" class="form-label">Cargo</label>
                <select asp-for="Roles" class="form-select" asp-items="Html.GetEnumSelectList<ViagemImpacta.Models.Enums.Roles>()"></select>
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2 mt-4">
                <a asp-action="Index" class="btn btn-secondary w-50">Voltar</a>
                <button type="submit" class="btn btn-primary w-50">Criar</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
